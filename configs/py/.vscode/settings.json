{
    // Путь к Python-интерпретатору
    // Можно указать абсолютный путь или использовать переменные:
    // "${workspaceFolder}/venv/bin/python" для Linux/macOS
    // "${workspaceFolder}\\venv\\Scripts\\python.exe" для Windows
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    // Пути, где VSCode будет искать дополнительные модули
    // Это нужно, если у тебя код не в корне, а в "src/"
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],

    // автоимпорт при вводе кода 
    "python.analysis.autoImportCompletions": true,
    "editor.formatOnSave": false,

    // black autopep8 yapf)
    "python.formatting.provider": "autopep8",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.logging.level": "error",
    "python.dataScience.enabled": false
}
